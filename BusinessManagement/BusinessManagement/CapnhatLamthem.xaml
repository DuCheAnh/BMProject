<Window x:Class="BusinessManagement.CapnhatLamthem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BusinessManagement"
        mc:Ignorable="d"
        Title="CapnhatLamthem" Height="140" Width="220">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Label Content="Hoàn thành: "  Grid.Column="0" Margin="0 2 0 0"></Label>
            <Label Content="Thêm:" Grid.Column="0" Margin=" 0"></Label>
            <Label Content="NV: " x:Name="Nhanvienlb"/>
            <Label Content="Thang: " x:Name="Thanglb"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <TextBox x:Name="hoanthanhtb" Text="" Margin="10 0 0 0" />
            <TextBox x:Name="themtb" Text="0" Margin="10 0 0 0"/>
            <Button x:Name="updatebtn" Content="OK" Width="50" Height="20" FontSize="10" Margin="30 15 0 0" Click="updatebtn_Click"/>
        </StackPanel>
     
    </Grid>
</Window>

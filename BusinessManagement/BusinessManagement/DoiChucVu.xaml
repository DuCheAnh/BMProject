<Window x:Class="BusinessManagement.DoiChucVu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:BusinessManagement"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Thay đổi chức vụ nhân viên" Height="130" Width="380">
    <Grid>
        <Canvas>
            <ComboBox   x:Name="chucvucbbox" Canvas.Left="20" Canvas.Top="20"
                      materialDesign:HintAssist.Hint="Chức vụ"
                      FontSize="18" FontWeight="Bold"
                      Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                      Width="180">
                <ComboBoxItem Content="QL"/>
                <ComboBoxItem Content="NVCT"/>
                <ComboBoxItem Content="TTS"/>
            </ComboBox>
            <Button Canvas.Top="40" Canvas.Right="10" Width="120" Background="DarkBlue" BorderBrush="DarkBlue" Click="Button_Click">
                <Label FontFamily="segment" Foreground="White">Đồng ý</Label>
            </Button>
        </Canvas>
    </Grid>
</Window>
